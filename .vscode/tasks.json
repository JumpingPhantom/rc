{
	"version": "2.0.0",
	"tasks": [
        {
            "type": "cargo",
            "command": "run",
            "problemMatcher": [
                "$rustc"
            ],
            "label": "rust: cargo run with info",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "env": {
                    "RUST_LOG": "info",
                }
            }
        }
    ]
}